{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": ["error", {"objects": "only-multiline"}],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        // https://eslint.org/docs/latest/rules/no-bitwise
        "no-bitwise": ["error"],
        // https://eslint.org/docs/latest/rules/no-cond-assign
        "no-cond-assign": ["error", "always"],
        // https://eslint.org/docs/latest/rules/no-plusplus
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        // https://eslint.org/docs/latest/rules/no-console
        "no-console": ["error", { "allow": ["warn", "error"] }],
        // https://eslint.org/docs/latest/rules/complexity
        "complexity": ["error", { "max": 2 }],
        // https://eslint.org/docs/latest/rules/max-depth
        "max-depth": ["error", 2],
        // https://eslint.org/docs/latest/rules/max-statements
        "max-statements": ["error", 5],
        // https://eslint.org/docs/latest/rules/max-lines-per-function
        "max-lines-per-function": ["error", 20],
        // https://eslint.org/docs/latest/rules/max-nested-callbacks
        "max-nested-callbacks": ["error", 3],
        // https://eslint.org/docs/latest/rules/max-len
        "max-len": ["error", {
            "code": 80,
            "ignoreComments": true,
            "ignoreTrailingComments": true,
            "ignoreUrls": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true
        }],
        // https://eslint.org/docs/latest/rules/keyword-spacing
        "keyword-spacing": ["error", { "after": false, "overrides": {"import": { "after": true }, "from": { "after": true }, "export": { "after": true }, "return": { "after": true }} }],
        // https://eslint.org/docs/latest/rules/spaced-comment
        "spaced-comment": ["error", "always"]
        // https://eslint.org/docs/latest/rules/function-paren-newline
        // https://eslint.org/docs/latest/rules/newline-after-var
        // https://eslint.org/docs/latest/rules/padding-line-between-statements

    }
}
