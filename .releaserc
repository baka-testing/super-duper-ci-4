{
  "branches": [
    {
      "name": "github-ci",
      "channel": "latest"
    },
    {
      "name": "main"
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "header": "Super Duper CI changes",
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES",
            "BREAKING"
          ]
        },
        "presetConfig": {
          "types": [
            {
              "type": "breaking",
              "section": "‚ùó Breaking Changes",
              "hidden": false
            },
            {
              "type": "feat",
              "section": "üöÄ New Features",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "üêõ Enhancements and Bug Fixes",
              "hidden": false
            },
            {
              "type": "docs",
              "section": "üìñ Docs",
              "hidden": false
            },
            {
              "type": "style",
              "section": "üé® Styles",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "üî© Refactor",
              "hidden": false
            },
            {
              "type": "perf",
              "section": "‚ö°Ô∏è Performances",
              "hidden": false
            },
            {
              "type": "test",
              "section": "‚úÖ Tests",
              "hidden": false
            },
            {
              "type": "ci",
              "section": "üîÅ CI",
              "hidden": false
            },
            {
              "type": "chore",
              "section": "üßπ Chore",
              "hidden": false
            }
          ]
        },
        "writerOpts": {
          "groupBy": "type",
          "commitGroupsSort": [
            "breaking",
            "feat",
            "fix",
            "docs",
            "style",
            "refactor",
            "perf",
            "test",
            "ci",
            "chore"
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "docs/CHANGELOG.md"
      }
    ],
    "@semantic-release/npm",
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "docs/CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/custom-button.js",
            "label": "custom-button.js"
          },
          {
            "path": "dist/custom-button.es.js",
            "label": "custom-button.es.js"
          },
          {
            "path": "dist/custom-button.d.ts",
            "label": "custom-button.d.ts"
          }
        ]
      }
    ]
  ]
}
